<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/calc_complete" />

    <EditText
        android:id="@+id/valor"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned" />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/valor"
        android:layout_alignLeft="@+id/valor"
        android:orientation="vertical"
        android:layout_below="@+id/valor"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/btns1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:tag="sete"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:text="8"
                android:tag="oito"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:tag="nove"
                android:onClick="setNumbers" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:tag="div"
                android:onClick="setOp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seta"
                android:tag="delete"
                android:onClick="setFunc"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btns1"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:tag="quatro"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:text="5"
                android:tag="cinco"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:tag="seis"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x"
                android:tag="multi"
                android:onClick="setOp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:tag="deletarAll"
                android:onClick="setFunc"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btns3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btns2"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:tag="um"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:text="2"
                android:tag="dois"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:tag="tres"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:tag="sub"
                android:onClick="setOp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="
                android:tag="igual"
                android:onClick="setFunc"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btns4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btns3"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:tag="zero"
                android:onClick="setNumbers"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:text="."
                android:tag="ponto"
                android:onClick="setOp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:tag="mais"
                android:onClick="setOp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_linear_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btn-go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/voltar_menu"
            android:onClick="voltaMenu"/>
    </LinearLayout>

</RelativeLayout>